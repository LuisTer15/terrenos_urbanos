<div class="container">
	<div class="row">
		<div class="col-12">
			<h1>Lotes</h1>
			<br>
			<div>
				<%= link_to "Crea un lote", new_lot_path, class: "btn btn-dark" %>
			</div>
			<br>
			<table class="table">
				<tr>
					<th>CODIGO</th>
					<th>DIRECCIÓN</th>
					<th>AREA TERRENO</th>
					<th>AREA CONSTRUIDA</th>
					<th>USO</th>
					<th>ALTURA EN PISOS</th>
					<th>FRENTE (metros)</th>
					<th></th>
					<th></th>
				</tr>
				<% @lots.each do |lot| %>
					<tr>
						<td><%= lot.code %></td>
						<td><%= link_to lot.address, lot %></td>
						<td><%= lot.area_land %></td>
						<td><%= lot.area_build %></td>
						<td><%= lot.use_build %></td>
						<td><%= lot.floors_build %></td>
						<td><%= lot.front_dim %></td>
						<td><%= link_to "Editar", edit_lot_path(lot) %></td>
						<td><%= link_to "Eliminar", lot, method: :delete, data: { confirm: "¿Estas seguro de eliminar este producto?"} %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

