<div class="row" hidden>
	<table class="table table-sm table-bordered table-striped text-center" id="table_db_properties">
		<% @properties.each do |property| %>
			<% @i = @i + 1 %>
				<tr id="property-<%= @i %>">
					<td id="property-<%= @i %>-code"><%= property.code %></td>
					<td id="property-<%= @i %>-price"><%= property.price %></td>
					<td id="property-<%= @i %>-address"><%= property.address %></td>

					<td id="property-<%= @i %>-location_lat"><%= property.location.to_f %></td>
					<td id="property-<%= @i %>-location_long"><%= property.location.split(',').last.to_f %></td>

					<td id="property-<%= @i %>-area_land"><%= property.area_land %></td>
					<td id="property-<%= @i %>-area_build"><%= property.area_build %></td>
					<td id="property-<%= @i %>-room_count"><%= property.room_count %></td>
					<td id="property-<%= @i %>-bathroom_count"><%= property.bathroom_count %></td>
				</tr>
		<% end %>
	</table>
</div>